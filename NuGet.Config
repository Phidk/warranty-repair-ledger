<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  <config>
    <!-- Keep the global packages in-repo for deterministic behavior in dev containers/CI -->
    <add key="globalPackagesFolder" value=".nuget/packages" />
  </config>
  <!-- Explicitly clear any inherited Windows-only fallback folders -->
  <fallbackPackageFolders>
    <clear />
  </fallbackPackageFolders>
</configuration>

